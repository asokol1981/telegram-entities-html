{
    "$schema": "https://getcomposer.org/schema.json",
    "name": "asokol1981/telegram-entities-html",
    "type": "project",
    "description": "Renders Telegram message entities into HTML",
    "keywords": [
        "php",
        "telegram",
        "message",
        "entities",
        "html"
    ],
    "license": "MIT",
    "require": {
        "php": ">=8.1",
        "ext-mbstring": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.75",
        "phpunit/phpunit": "^10.5.17 || ^11.0.7"
    },
    "autoload": {
        "psr-4": {
            "ASokol1981\\Telegram\\Entities\\Html\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "ASokol1981\\Telegram\\Entities\\Html\\": "tests/",
            "ASokol1981\\Telegram\\Entities\\Html\\Fixtures\\": "tests/fixtures/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
